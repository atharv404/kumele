// Prisma Schema for Kumele Backend
// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== ENUMS ====================

enum UserRole {
  USER
  ADMIN
  MODERATOR
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum BadgeTier {
  NONE
  BRONZE
  SILVER
  GOLD
}

enum EventStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELED
  FULL
}

enum JoinStatus {
  REQUESTED
  MATCHED
  RESERVED
  PENDING_PAYMENT
  CONFIRMED
  JOINED
  EXPIRED
  CANCELLED
  ATTENDED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED
  CANCELED
}

enum PaymentProvider {
  STRIPE
  PAYPAL
  COINBASE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  PAUSED
  TRIALING
  EXPIRED
}

enum ChatRoomStatus {
  ACTIVE
  CLOSED
  DELETED
}

enum ModerationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ContentType {
  BLOG
  COMMENT
  EVENT
  USER_PROFILE
  AD
}

enum NotificationType {
  EVENT_REMINDER
  EVENT_CANCELED
  EVENT_JOINED
  PAYMENT_SUCCESS
  PAYMENT_FAILED
  CHAT_MESSAGE
  BADGE_EARNED
  SYSTEM
}

enum SupportTicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum AdStatus {
  DRAFT
  ACTIVE
  PAUSED
  COMPLETED
  REJECTED
}

// ==================== USER & AUTH ====================

model User {
  id                String       @id @default(uuid())
  email             String       @unique
  passwordHash      String?
  firstName         String?
  lastName          String?
  displayName       String?
  avatar            String?
  bio               String?
  dateOfBirth       DateTime?
  gender            Gender?
  phone             String?
  
  // Location
  city              String?
  country           String?
  latitude          Float?
  longitude         Float?
  locationRadius    Int          @default(10) // km
  
  // Preferences
  preferredLanguage String       @default("en")
  
  // Status & Role
  role              UserRole     @default(USER)
  status            UserStatus   @default(ACTIVE)
  emailVerified     Boolean      @default(false)
  emailVerifiedAt   DateTime?
  
  // Referral System
  referralCode      String?      @unique
  referredBy        String?
  referredByUser    User?        @relation("ReferralRelation", fields: [referredBy], references: [id])
  referrals         User[]       @relation("ReferralRelation")
  
  // OAuth
  googleId          String?      @unique
  
  // 2FA
  twoFactorEnabled  Boolean      @default(false)
  twoFactorSecret   String?
  
  // Rewards
  currentBadge      BadgeTier    @default(NONE)
  totalEventsAttended Int        @default(0)
  
  // Stripe
  stripeCustomerId         String?
  stripeConnectedAccountId String?
  
  // Timestamps
  lastLoginAt       DateTime?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  deletedAt         DateTime?
  
  // Relations
  sessions          Session[]
  passkeys          PasskeyCredential[]
  hobbies           UserHobby[]
  hostedEvents      Event[]      @relation("HostedEvents")
  eventJoins        EventJoin[]
  checkins          Checkin[]
  blogPosts         BlogPost[]
  blogComments      BlogComment[]
  blogLikes         BlogLike[]
  chatMessages      ChatMessage[]
  notifications     Notification[]
  paymentIntents    PaymentIntent[]
  subscriptions     Subscription[]
  pushTokens        PushToken[]
  supportTickets    SupportTicket[]
  contentReports    ContentReport[]
  adAccounts        AdAccount[]
  walletConnections WalletConnection[]
  rewardHistory     RewardHistory[]
  refundRequests    RefundRequest[]
  rewardDiscounts   RewardDiscount[]
  
  // Days 14-18 relations
  notificationsV2     NotificationV2[]
  notificationTokens  NotificationToken[]
  emailDeliveryLogs   EmailDeliveryLog[]
  followers           Follow[]           @relation("FollowedRelation")
  following           Follow[]           @relation("FollowerRelation")
  adsCampaignsV2      AdsCampaignV2[]
  moderatedAds        AdV2[]             @relation("AdModerator")
  adEventsV2          AdEventV2[]
  adminAuditLogs      AdminAuditLog[]    @relation("AdminAuditLogs")
  shareTokens         ShareToken[]
  mediaAssets         MediaAsset[]
  supportTicketsV2    SupportTicketV2[]  @relation("SupportTicketsV2")
  assignedTickets     SupportTicketV2[]  @relation("SupportTicketAssignee")

  @@index([email])
  @@index([googleId])
  @@index([referralCode])
  @@index([status])
  @@index([latitude, longitude])
  @@map("users")
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  refreshToken String   @unique
  userAgent    String?
  ipAddress    String?
  
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([userId])
  @@index([refreshToken])
  @@index([expiresAt])
  @@map("sessions")
}

model PasskeyCredential {
  id                  String   @id @default(uuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  credentialId        Bytes    @unique
  publicKey           Bytes
  counter             BigInt   @default(0)
  
  // Device info
  deviceType          String?
  deviceName          String?
  transports          String[] // USB, NFC, BLE, internal, hybrid
  
  // Metadata
  aaguid              String?
  createdAt           DateTime @default(now())
  lastUsedAt          DateTime?
  
  @@index([userId])
  @@index([credentialId])
  @@map("passkey_credentials")
}

// ==================== HOBBIES ====================

model HobbyCategory {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  icon        String?
  color       String?
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  hobbies     Hobby[]
  blogPosts   BlogPost[]
  
  @@index([slug])
  @@map("hobby_categories")
}

model Hobby {
  id          String        @id @default(uuid())
  categoryId  String
  category    HobbyCategory @relation(fields: [categoryId], references: [id])
  
  name        String
  slug        String        @unique
  description String?
  icon        String?
  isActive    Boolean       @default(true)
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  users       UserHobby[]
  events      EventHobby[]
  
  @@unique([categoryId, name])
  @@index([slug])
  @@map("hobbies")
}

model UserHobby {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  hobbyId   String
  hobby     Hobby    @relation(fields: [hobbyId], references: [id], onDelete: Cascade)
  
  skillLevel Int?    // 1-5
  isPrimary  Boolean @default(false)
  
  createdAt DateTime @default(now())
  
  @@unique([userId, hobbyId])
  @@index([userId])
  @@index([hobbyId])
  @@map("user_hobbies")
}

// ==================== EVENTS ====================

model Event {
  id              String       @id @default(uuid())
  hostId          String
  host            User         @relation("HostedEvents", fields: [hostId], references: [id])
  
  title           String
  description     String
  coverImage      String?
  
  // Location (OpenStreetMap compatible)
  address         String?
  displayAddress  String?
  city            String?
  country         String?
  latitude        Float
  longitude       Float
  venueName       String?
  
  // Timing
  startsAt        DateTime
  endsAt          DateTime
  eventStartTime  DateTime?    // Alias for startsAt (new API)
  eventEndTime    DateTime?    // Alias for endsAt (new API)
  timezone        String       @default("UTC")
  
  // Capacity
  capacity        Int          @default(10)
  minCapacity     Int          @default(2)
  currentCount    Int          @default(0)
  
  // Pricing (EUR canonical)
  isPaid          Boolean      @default(false)
  basePriceEur    Decimal?     @db.Decimal(10, 2)
  price           Decimal      @default(0) @db.Decimal(10, 2)
  currency        String       @default("EUR")
  currencyBase    String       @default("EUR")
  
  // Status
  status          EventStatus  @default(DRAFT)
  isCancelled     Boolean      @default(false)
  cancelReason    String?
  cancelledAt     DateTime?
  
  // Requirements
  minAge          Int?
  maxAge          Int?
  genderRestriction Gender?
  languagePreference String?
  
  // Metadata
  isPublic        Boolean      @default(true)
  requiresApproval Boolean     @default(false)
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  canceledAt      DateTime?
  
  // Relations
  hobbies         EventHobby[]
  joins           EventJoin[]
  checkins        Checkin[]
  chatRoom        ChatRoom?
  paymentIntents  PaymentIntent[]
  
  @@index([hostId])
  @@index([status])
  @@index([startsAt])
  @@index([latitude, longitude])
  @@index([city])
  @@map("events")
}

model EventHobby {
  id       String @id @default(uuid())
  eventId  String
  event    Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  hobbyId  String
  hobby    Hobby  @relation(fields: [hobbyId], references: [id], onDelete: Cascade)
  
  @@unique([eventId, hobbyId])
  @@index([eventId])
  @@index([hobbyId])
  @@map("event_hobbies")
}

model EventJoin {
  id            String     @id @default(uuid())
  eventId       String
  event         Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  status        JoinStatus @default(REQUESTED)
  reservedUntil DateTime?
  joinedAt      DateTime?
  
  // Matching
  matchScore          Float?
  matchDecision       String?    // accept | reject | waitlist
  matchedAt           DateTime?
  matchingMode        String     @default("auto") // ml | fallback | auto
  fallbackUsed        Boolean    @default(false)
  
  // Match finalization (Day 10)
  matchFinalizedAt    DateTime?
  matchFinalizedBy    String?    // system | admin
  
  // Payment window
  paymentWindowStart  DateTime?
  paymentExpiresAt    DateTime?
  paymentCompletedAt  DateTime?
  
  // Cancellation
  cancelledBy         String?    // host | guest | system
  cancelledAt         DateTime?
  cancelReason        String?
  
  // Payment reference
  paymentIntentId     String?
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
  @@index([status])
  @@index([reservedUntil])
  @@index([paymentExpiresAt])
  @@map("event_joins")
}

enum CheckinMethod {
  HOST_VERIFIED
  SELF_VERIFIED
}

enum CheckinStatus {
  HOST_VERIFIED
  SELF_VERIFIED
  FAILED_DISTANCE
}

model Checkin {
  id            String        @id @default(uuid())
  eventId       String
  event         Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Check-in method
  method        CheckinMethod
  status        CheckinStatus @default(HOST_VERIFIED)
  
  // Host who verified (for HOST_VERIFIED)
  verifiedBy    String?
  
  // GPS data (for self check-in)
  guestLat      Float?
  guestLng      Float?
  distanceKm    Float?   // Actual distance from event
  
  // Legacy fields for backwards compatibility
  latitude      Float?
  longitude     Float?
  scannedByHostId String?
  
  checkedInAt   DateTime @default(now())
  
  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
  @@map("checkins")
}

// ==================== PAYMENTS ====================

model PaymentIntent {
  id                  String         @id @default(uuid())
  userId              String
  user                User           @relation(fields: [userId], references: [id])
  eventId             String?
  event               Event?         @relation(fields: [eventId], references: [id])
  
  // Provider info
  provider            PaymentProvider @default(STRIPE)
  providerIntentId    String?        @unique
  stripeId            String?        @unique
  
  // Amount
  amount              Decimal        @db.Decimal(10, 2)
  amountMinor         Int            @default(0)  // Amount in cents
  originalAmountMinor Int?
  discountAmountMinor Int?
  currency            String         @default("EUR")
  
  // Product info
  productType         String         @default("EVENT")
  
  // Status
  status              PaymentStatus  @default(PENDING)
  failureReason       String?
  
  // Escrow
  capturedAt          DateTime?
  releasedAt          DateTime?
  
  // Metadata
  metadata            Json?
  
  // Promo code (legacy)
  promoCodeId         String?
  promoCode           PromoCode?     @relation(fields: [promoCodeId], references: [id])
  discountAmount      Decimal?       @db.Decimal(10, 2)
  
  // New discount relations
  discountCodeId      String?
  rewardDiscountId    String?
  
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
  
  // Escrow relation
  escrow              Escrow?
  
  // Refund requests
  refundRequests      RefundRequest[]
  
  @@index([userId])
  @@index([eventId])
  @@index([providerIntentId])
  @@index([stripeId])
  @@index([status])
  @@map("payment_intents")
}

// ==================== REFUND REQUESTS (Day 12) ====================

enum RefundRequestStatus {
  PENDING
  APPROVED
  REJECTED
  PROCESSED
  FAILED
}

model RefundRequest {
  id              String              @id @default(uuid())
  paymentIntentId String
  paymentIntent   PaymentIntent       @relation(fields: [paymentIntentId], references: [id])
  userId          String
  user            User                @relation(fields: [userId], references: [id])
  
  // Request details
  reason          String
  details         String?
  amountMinor     Int
  currency        String
  
  // Status
  status          RefundRequestStatus @default(PENDING)
  
  // Admin processing
  processedAt     DateTime?
  processedBy     String?
  adminNotes      String?
  
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  
  @@index([paymentIntentId])
  @@index([userId])
  @@index([status])
  @@map("refund_requests")
}

model PromoCode {
  id              String          @id @default(uuid())
  code            String          @unique
  description     String?
  
  // Discount
  discountType    String          // 'PERCENTAGE' or 'FIXED'
  discountValue   Decimal         @db.Decimal(10, 2)
  
  // Limits
  maxUses         Int?
  usedCount       Int             @default(0)
  maxUsesPerUser  Int             @default(1)
  minPurchase     Decimal?        @db.Decimal(10, 2)
  
  // Validity
  startsAt        DateTime?
  expiresAt       DateTime?
  isActive        Boolean         @default(true)
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  paymentIntents  PaymentIntent[]
  
  @@index([code])
  @@index([isActive])
  @@map("promo_codes")
}

// ==================== ESCROW & PAYMENTS (Days 10-13) ====================

enum EscrowStatus {
  HELD        // Money captured, waiting for release conditions
  SCHEDULED   // Release conditions met, queued for transfer
  RELEASED    // Successfully transferred to host
  FAILED      // Transfer failed after retry
  REFUNDED    // Refund issued
}

model Escrow {
  id                    String       @id @default(uuid())
  paymentIntentId       String       @unique
  paymentIntent         PaymentIntent @relation(fields: [paymentIntentId], references: [id])
  eventId               String
  hostId                String
  
  // Amount
  amountMinor           Int          // Cents/kobo (integer)
  currency              String
  
  // Stripe
  stripeTransferId      String?
  
  // Gating conditions
  attendanceVerified    Boolean      @default(false)
  eventEndAt            DateTime
  releaseAt             DateTime     // eventEndAt + 7 days
  
  // Status
  status                EscrowStatus @default(HELD)
  retryCount            Int          @default(0)
  
  // Timestamps
  releasedAt            DateTime?
  refundedAt            DateTime?
  refundReason          String?
  
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  
  @@index([status])
  @@index([releaseAt])
  @@index([hostId])
  @@index([eventId])
  @@map("escrows")
}

model FXRate {
  id          String   @id @default(uuid())
  date        DateTime @db.Date
  base        String   // EUR
  rates       Json     // { "USD": 1.09, "NGN": 1650.50 }
  source      String   // frankfurter | exchangeratesapi
  createdAt   DateTime @default(now())

  @@unique([date, base])
  @@index([date])
  @@map("fx_rates")
}

// ==================== DISCOUNTS (Day 12) ====================

enum DiscountType {
  PERCENTAGE
  FIXED
}

model DiscountCode {
  id              String       @id @default(uuid())
  code            String       @unique
  type            DiscountType
  value           Float        // Percentage (0-100) or fixed amount

  // Eligibility
  productTypes    String[]     // ['subscription', 'iap', 'event_fee']
  minAmount       Int?         // Minimum purchase amount (minor units)
  maxUses         Int?         // Global usage limit
  maxUsesPerUser  Int          @default(1)

  // Geography
  allowedCountries String[]
  allowedCities    String[]

  // User segments
  userSegments    String[]     // ['new_user', 'host', 'attendee']

  // Status
  isActive        Boolean      @default(true)
  validFrom       DateTime
  validUntil      DateTime

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  redemptions     DiscountRedemption[]

  @@index([code])
  @@index([isActive, validFrom, validUntil])
  @@map("discount_codes")
}

model DiscountRedemption {
  id          String       @id @default(uuid())
  codeId      String
  code        DiscountCode @relation(fields: [codeId], references: [id])
  userId      String

  // Redemption details
  amountMinor Int
  currency    String
  productType String

  createdAt   DateTime     @default(now())

  @@index([userId, codeId])
  @@map("discount_redemptions")
}

model RewardDiscount {
  id          String       @id @default(uuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id])

  // Reward tier
  rewardTier  String       // BRONZE | SILVER | GOLD

  // Discount
  type        DiscountType
  value       Float

  // Eligibility
  expiresAt   DateTime
  isRedeemed  Boolean      @default(false)
  redeemedAt  DateTime?

  createdAt   DateTime     @default(now())

  @@index([userId, isRedeemed])
  @@map("reward_discounts")
}

model Subscription {
  id                  String             @id @default(uuid())
  userId              String
  user                User               @relation(fields: [userId], references: [id])
  
  // Provider info
  provider            PaymentProvider
  providerSubId       String             @unique
  providerCustomerId  String?
  
  // Plan
  planId              String
  planName            String
  
  // Status
  status              SubscriptionStatus @default(ACTIVE)
  cancelAtPeriodEnd   Boolean            @default(false)
  
  // Billing
  currentPeriodStart  DateTime
  currentPeriodEnd    DateTime
  canceledAt          DateTime?
  
  // Entitlements (feature flags)
  entitlements        Json?              // { location_change: true, boost: true }
  
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  
  @@index([userId])
  @@index([providerSubId])
  @@index([status])
  @@map("subscriptions")
}

// ==================== CHAT ====================

model ChatRoom {
  id          String         @id @default(uuid())
  eventId     String         @unique
  event       Event          @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  status      ChatRoomStatus @default(ACTIVE)
  openedAt    DateTime       @default(now())
  closesAt    DateTime
  closedAt    DateTime?
  
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  messages    ChatMessage[]
  
  @@index([eventId])
  @@index([status])
  @@index([closesAt])
  @@map("chat_rooms")
}

model ChatMessage {
  id         String   @id @default(uuid())
  chatRoomId String
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  
  content    String
  
  createdAt  DateTime @default(now())
  
  @@index([chatRoomId])
  @@index([userId])
  @@index([createdAt])
  @@map("chat_messages")
}

// ==================== BLOGS ====================

model BlogPost {
  id           String           @id @default(uuid())
  authorId     String
  author       User             @relation(fields: [authorId], references: [id])
  
  title        String
  slug         String           @unique
  content      String           @db.Text
  excerpt      String?
  coverImage   String?
  coverImageUrl String?
  
  // Hobby category relation
  hobbyCategoryId String?
  hobbyCategory   HobbyCategory? @relation(fields: [hobbyCategoryId], references: [id])
  language        String?
  
  // Relations to events
  eventId      String?
  
  // Moderation
  moderation        ModerationStatus @default(PENDING)
  moderationStatus  String           @default("PENDING") // PENDING | APPROVED | REJECTED
  isFlagged         Boolean          @default(false)
  
  // Counts (denormalized for performance)
  likeCount    Int              @default(0)
  likesCount   Int              @default(0)
  commentCount Int              @default(0)
  commentsCount Int             @default(0)
  viewCount    Int              @default(0)
  viewsCount   Int              @default(0)
  
  isPublished  Boolean          @default(false)
  publishedAt  DateTime?
  
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  
  comments     BlogComment[]
  likes        BlogLike[]
  
  @@index([authorId])
  @@index([slug])
  @@index([moderation])
  @@index([hobbyCategoryId])
  @@index([isPublished])
  @@index([createdAt])
  @@map("blog_posts")
}

model BlogComment {
  id           String           @id @default(uuid())
  postId       String
  post         BlogPost         @relation(fields: [postId], references: [id], onDelete: Cascade)
  authorId     String
  author       User             @relation(fields: [authorId], references: [id])
  
  content      String
  
  // Nested comments
  parentId     String?
  parent       BlogComment?     @relation("CommentReplies", fields: [parentId], references: [id])
  replies      BlogComment[]    @relation("CommentReplies")
  
  moderation   ModerationStatus @default(PENDING)
  
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  
  @@index([postId])
  @@index([authorId])
  @@index([parentId])
  @@map("blog_comments")
}

model BlogLike {
  id        String   @id @default(uuid())
  postId    String
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
  @@map("blog_likes")
}

// ==================== ADS ====================

model AdAccount {
  id          String       @id @default(uuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  
  name        String
  balance     Decimal      @default(0) @db.Decimal(10, 2)
  currency    String       @default("USD")
  
  isActive    Boolean      @default(true)
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  campaigns   AdCampaign[]
  
  @@index([userId])
  @@map("ad_accounts")
}

model AdCampaign {
  id          String     @id @default(uuid())
  accountId   String
  account     AdAccount  @relation(fields: [accountId], references: [id])
  
  name        String
  
  // Creative
  headline    String
  description String
  imageUrl    String?
  targetUrl   String
  
  // Targeting
  targeting   Json       // Hobbies, location, age, gender, language
  
  // Budget
  dailyBudget Decimal    @db.Decimal(10, 2)
  totalBudget Decimal?   @db.Decimal(10, 2)
  spent       Decimal    @default(0) @db.Decimal(10, 2)
  
